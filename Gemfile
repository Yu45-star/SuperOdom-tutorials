source 'https://rubygems.org'

gem "github-pages", group: :jekyll_plugins

gem "jekyll-sitemap" # automatically generates a sitemap.xml file
gem "jekyll-feed"    # adds an Atom feed
gem "jekyll-seo-tag" # adds meta tags for SEO

group :jekyll_plugins do
    gem "jekyll-paginate"      # pagination support
    gem "jekyll-gist"          # embeds GitHub gists
    gem "jekyll-include-cache" # caches includes for performance
  end